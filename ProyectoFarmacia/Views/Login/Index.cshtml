@model ProyectoFarmacia.Models.UserModel;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<style>

    .img {
        max-width: 100%;
        
    }


</style>


<br />
<br />
<br />

<div class="container  ">


    <div class="card col-md-6 offset-md-3 text-center">

        
       <!-- <div class="card-header bg-primary">
            <h4 class="text-white text-center">Inicio de Sesión </h4>
         </div>-->
        <div>
            <img src="/img/logoinicio.png" class="img" />
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <a >Correo Electrónico:</a>
                <br />
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.UserSession, new{placeholder = "Usuario"})
                @Html.ValidationMessageFor(m => m.UserSession, "", new { @class = "text-danger" })
                <br />
                <br />
                <a >Contraseña:</a>
                <br />
                @Html.PasswordFor(m => m.PasswordUser, new{placeholder = "Contraseña"})
                @Html.ValidationMessageFor(m => m.PasswordUser, "" ,new { @class = "text-danger" })

                <br />
                <br />
                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
                
            }

        </div>
    </div>
    
</div>

