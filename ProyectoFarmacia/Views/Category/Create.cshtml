@model ProyectoFarmacia.Models.CategoryModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}



    <div class="card col-md-6">
        <div class="card-header bg-primary">
            <h4 class="text-white text-center">Form Category</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NameCategory" class="control-label"></label>
                    <input asp-for="NameCategory" class="form-control" />
                    <span asp-validation-for="NameCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>

    </div>

<div>@ViewBag.messageGeneric</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
